      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Статус ответа должен быть 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Ответ содержит text и id\", function () {",
              "    const data = pm.response.json();",
              "    pm.expect(data).to.have.property(\"text\");",
              "    pm.expect(data).to.have.property(\"id\");",
              "    pm.expect(data.text).to.include(\"Anna\");",
              "});",
              "",
              "(function () {",
              "    const data = pm.response.json();",
              "    if (data && data.id !== undefined) {",
              "        pm.environment.set(\"user_id\", data.id);",
              "    } else {",
              "        console.warn(\"Беда беда потеряшки\");",
              "    }",
              "}) ();"
